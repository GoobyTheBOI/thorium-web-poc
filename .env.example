# Environment variables for Thorium TTS Web App

# Enable mock TTS to save API credits during development/testing
# Set to 'true' to use mock audio generation instead of real TTS APIs
ENABLE_MOCK_TTS=false

# Environment variables for ElevenLabs TTS
ELEVENLABS_API_KEY='YOUR_ELEVENLABS_API_KEY_HERE'

# Environment variables for Azure TTS
AZURE_REGION='YOUR_AZURE_REGION_HERE'
AZURE_VOICE_NAME='your-azure-voice-name'
AZURE_API_KEY='YOUR_AZURE_API_KEY_HERE'

# Environment variables for application
NODE_ENV=development

